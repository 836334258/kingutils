{
  "name": "kingutils",
  "version": "1.2.3",
  "description": "king的函数集合",
  "type": "module",
  "types": "dist/kingutils.d.ts",
  "engines": {
    "node": ">=16.14.0"
  },
  "exports": {
    ".": {
      "default": "./dist/kingutils.min.js"
    }
  },
  "workspaces": [
    "play"
  ],
  "scripts": {
    "dev": "webpack serve",
    "build": "node --experimental-json-modules script/build.js",
    "build:dts": "api-extractor run --local --verbose",
    "prepare": "husky install",
    "test": "jest -c jest.config.mjs",
    "play": "pnpm -C play dev",
    "addUser": "npm adduser  --registry=https://registry.npmjs.org/",
    "clean": "rimraf dist pnpm-lock.yaml node_modules"
  },
  "keywords": [
    "util",
    "king",
    "tool"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:836334258/kingutils.git"
  },
  "author": "king",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@microsoft/api-extractor": "^7.19.4",
    "@types/jest": "^27.4.1",
    "@types/webpack-env": "^1.16.3",
    "babel-loader": "^8.2.3",
    "chalk": "^5.0.0",
    "esbuild-loader": "^2.18.0",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "jest-runner-tsc": "^1.6.0",
    "lint-staged": "^12.3.4",
    "ora": "^6.1.0",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.7",
    "typescript": "^4.6.2",
    "webpack": "^5.69.1"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write",
    "*.ts": "prettier --parser=typescript --write"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
